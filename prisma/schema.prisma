// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Student {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName String
  email String @unique 
  tel String?
  birth String?
  cep String?
  city String?
  state String?
  address String?
  addressNumber String?
  district String?
  complement String?
  password String
  profilePhoto String?
  requests Request[]
}

model Professor {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName String
  email String @unique
  ddd String
  tel String?
  birth String?
  cep String?
  city String?
  state String?
  address String?
  addressNumber String?
  district String?
  complement String?
  password String
  themes String[]
  resume String
  profilePhoto String?
}

model Request {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  theme String
  message String
  createdAt DateTime @default(now()) 
  updatedAt DateTime @updatedAt
  studentId String @db.ObjectId
  student Student @relation(fields: [studentId], references: [id])
}

